<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="FastAppoint - The easiest way for service businesses to accept online bookings and payments." />
    <title>{{ title ?? 'FastAppoint' }}</title>
    <link rel="icon" type="image/svg+xml" href="/logo/svg/favicon.svg" />

    <link rel="preconnect" href="https://fonts.bunny.net" />
    <link
      href="https://fonts.bunny.net/css?family=instrument-sans:400,400i,500,500i,600,600i,700,700i"
      rel="stylesheet"
    />

    <style>
      :root {
        /* New Colorful Minimalism Color System */
        --primary: #0066ff;
        --primary-light: #3385ff;
        --primary-dark: #0052cc;

        --success: #00c853;
        --success-light: #69f0ae;
        --success-bg: #e8f5e9;

        --warning: #ff9500;
        --warning-light: #ffb84d;
        --warning-bg: #fff3e0;

        --error: #ff3b30;
        --error-light: #ff6b62;
        --error-bg: #ffebee;

        --info: #00b8d4;
        --info-bg: #e0f7fa;

        --purple: #8b5cf6;
        --pink: #ec4899;
        --teal: #14b8a6;
        --amber: #f59e0b;
      }

      [x-cloak] { display: none !important; }

      /* Custom hover effect for cards */
      .card-hover {
        transition: all 0.2s ease;
      }
      .card-hover:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      }

      /* Button styles */
      .btn-primary {
        background-color: var(--primary);
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 0.75rem;
        font-weight: 600;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        justify-content: center;
      }
      .btn-primary:hover {
        transform: scale(1.02);
        box-shadow: 0 4px 14px 0 rgba(0, 102, 255, 0.2);
      }
      .btn-primary:active {
        transform: scale(0.98);
      }

      .btn-ghost {
        background-color: #f5f5f5;
        color: #171717;
        padding: 0.75rem 1.5rem;
        border-radius: 0.75rem;
        font-weight: 600;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        justify-content: center;
      }
      .btn-ghost:hover {
        background-color: #e5e5e5;
      }
    </style>

    <script src="https://cdn.tailwindcss.com"></script>

    <script>
      tailwind.config = {
        theme: {
          extend: {
            fontFamily: {
              sans: ["Instrument Sans", "sans-serif"]
            },
            colors: {
              primary: {
                DEFAULT: "#0066ff",
                light: "#3385ff",
                dark: "#0052cc",
                50: "#e6f2ff",
                100: "#b3d9ff",
              },
              success: {
                DEFAULT: "#00c853",
                light: "#69f0ae",
                bg: "#e8f5e9",
              },
              warning: {
                DEFAULT: "#ff9500",
                light: "#ffb84d",
                bg: "#fff3e0",
              },
              error: {
                DEFAULT: "#ff3b30",
                light: "#ff6b62",
                bg: "#ffebee",
              },
              info: {
                DEFAULT: "#00b8d4",
                light: "#4dd0e1",
                bg: "#e0f7fa",
              },
              purple: "#8b5cf6",
              pink: "#ec4899",
              teal: "#14b8a6",
              amber: "#f59e0b",
            }
          }
        }
      };
    </script>

    @vite(['resources/css/app.css', 'resources/js/app.js'])
    @stack('dumper')
  </head>
  <body class="min-h-screen w-screen font-sans bg-neutral-50" x-data="appState()" x-init="init()">
    @include('partials/toast')
    
    <div class="min-h-screen flex flex-col">
      @include('partials/navbar')

      <main class="flex-1">
        @!section('content')
      </main>

      @if(!auth.user)
        @include('partials/footer')
      @endif
    </div>
  </body>
</html>

