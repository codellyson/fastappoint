<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{ business.name }} ‚ú® Book Now</title>
  <meta name="description" content="{{ theme?.tagline || business.description || `Book an appointment with ${business.name}` }}" />
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
  @if(theme)
    <link href="{{ theme.getGoogleFontsUrl() }}" rel="stylesheet" />
  @endif
  <style>
    :root {
      {{ theme?.getCssVariables() || `
        --theme-primary: #db2777;
        --theme-secondary: #fdf4ff;
        --theme-accent: #8b5cf6;
        --theme-text: #1f2937;
        --theme-background: #ffffff;
        --theme-font-heading: 'Poppins', sans-serif;
        --theme-font-body: 'Poppins', sans-serif;
      ` }}
    }
    body {
      font-family: var(--theme-font-body);
      color: var(--theme-text);
      background: linear-gradient(135deg, var(--theme-secondary) 0%, var(--theme-background) 50%, var(--theme-secondary) 100%);
      min-height: 100vh;
    }
    h1, h2, h3 {
      font-family: var(--theme-font-heading);
    }
    .btn-primary {
      background: linear-gradient(135deg, var(--theme-primary), var(--theme-accent));
      @if(theme?.buttonStyle === 'pill')
        border-radius: 9999px;
      @elseif(theme?.buttonStyle === 'square')
        border-radius: 0.5rem;
      @else
        border-radius: 1rem;
      @endif
    }
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px -10px var(--theme-primary);
    }
    .card-vibrant {
      background: white;
      border-radius: 1.5rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }
    .service-card {
      background: white;
      border-radius: 1.25rem;
      border: 2px solid transparent;
      transition: all 0.3s ease;
    }
    .service-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 24px -12px rgba(0, 0, 0, 0.15);
    }
    .service-card.selected {
      border-color: var(--theme-primary);
      background: linear-gradient(135deg, var(--theme-secondary), white);
    }
    .blob {
      position: absolute;
      border-radius: 50%;
      filter: blur(60px);
      opacity: 0.3;
      z-index: 0;
    }
    {{ theme?.customCss || '' }}
    [x-cloak] { display: none !important; }
  </style>
</head>
<body x-data="bookingApp()">
  <div class="blob w-96 h-96 -top-48 -left-48" style="background: var(--theme-primary)"></div>
  <div class="blob w-72 h-72 top-1/2 -right-36" style="background: var(--theme-accent)"></div>

  <div class="relative z-10 max-w-6xl mx-auto px-4 py-8">
    <header class="text-center mb-12">
      @if(business.logo)
        <div class="relative inline-block">
          <img src="{{ business.logo }}" alt="{{ business.name }}" class="w-28 h-28 rounded-3xl object-cover shadow-xl" />
          <div class="absolute -bottom-2 -right-2 w-8 h-8 rounded-full flex items-center justify-center text-white text-lg" style="background: linear-gradient(135deg, var(--theme-primary), var(--theme-accent))">‚ú®</div>
        </div>
      @else
        <div class="w-28 h-28 rounded-3xl mx-auto flex items-center justify-center text-5xl font-bold text-white shadow-xl" style="background: linear-gradient(135deg, var(--theme-primary), var(--theme-accent))">
          {{ business.name.charAt(0) }}
        </div>
      @endif
      <h1 class="text-4xl md:text-5xl font-extrabold mt-6 bg-clip-text text-transparent" style="background-image: linear-gradient(135deg, var(--theme-primary), var(--theme-accent))">
        {{ business.name }}
      </h1>
      @if(theme?.tagline)
        <p class="text-lg mt-3 opacity-70">{{ theme.tagline }}</p>
      @endif
      <div class="flex justify-center gap-3 mt-6">
        @if(theme?.socialLinks?.instagram)
          <a href="{{ theme.socialLinks.instagram }}" target="_blank" class="w-12 h-12 rounded-xl flex items-center justify-center text-pink-500 hover:scale-110 transition-transform" style="background: var(--theme-secondary)">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
          </a>
        @endif
        @if(theme?.socialLinks?.tiktok)
          <a href="{{ theme.socialLinks.tiktok }}" target="_blank" class="w-12 h-12 rounded-xl flex items-center justify-center hover:scale-110 transition-transform" style="background: var(--theme-secondary)">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/></svg>
          </a>
        @endif
        @if(theme?.socialLinks?.whatsapp)
          <a href="{{ theme.socialLinks.whatsapp }}" target="_blank" class="w-12 h-12 rounded-xl flex items-center justify-center text-green-500 hover:scale-110 transition-transform" style="background: var(--theme-secondary)">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
          </a>
        @endif
      </div>
    </header>

    <div class="grid lg:grid-cols-5 gap-8">
      <div class="lg:col-span-3 space-y-8">
        <section>
          <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
            üíÖ Services
          </h2>
          <div class="grid sm:grid-cols-2 gap-4">
            @each(service in services)
              <div
                class="service-card p-5 cursor-pointer overflow-hidden"
                :class="{ 'selected': selectedService?.id === {{ service.id }} }"
                @click="selectService({{ service.id }}, '{{ service.name }}', {{ service.convertedPrice || service.price }}, {{ service.durationMinutes || 30 }})"
              >
                @if(service.image)
                  <img src="{{ service.image }}" alt="{{ service.name }}" class="w-full h-32 object-cover rounded-lg mb-3 -mt-1" />
                @endif
                <h3 class="font-bold text-lg">{{ service.name }}</h3>
                @if(service.description)
                  <p class="text-sm opacity-60 mt-1">{{ service.description }}</p>
                @endif
                <div class="flex justify-between items-end mt-4">
                  <span class="text-sm opacity-50">{{ service.durationMinutes || 30 }} min</span>
                  <span class="text-xl font-bold" style="color: var(--theme-primary)">{{ service.formattedPrice || (currencyService.getCurrencySymbol(customerCurrency || businessCurrency || 'NGN') + Number(service.convertedPrice || service.price).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })) }}</span>
                </div>
              </div>
            @end
          </div>
        </section>

        @if(packages && packages.length > 0)
          <section>
            <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
              üéÅ Packages
            </h2>
            <div class="grid sm:grid-cols-2 gap-4">
              @each(pkg in packages)
                <div
                  class="service-card p-5 cursor-pointer overflow-hidden"
                  :class="{ 'selected': selectedPackage?.id === {{ pkg.id }} }"
                  @click="selectPackage({{ pkg.id }}, '{{ pkg.name }}', {{ pkg.packagePrice }}, {{ pkg.durationMinutes }}, {{ JSON.stringify(pkg.serviceIds) }})"
                >
                  @if(pkg.image)
                    <img src="{{ pkg.image }}" alt="{{ pkg.name }}" class="w-full h-32 object-cover rounded-lg mb-3 -mt-1" />
                  @endif
                  <div class="flex items-center gap-2">
                    <h3 class="font-bold text-lg">{{ pkg.name }}</h3>
                    @if(pkg.savingsPercent > 0)
                      <span class="px-2 py-0.5 text-xs font-bold rounded-full text-white" style="background: linear-gradient(135deg, var(--theme-primary), var(--theme-accent))">
                        -{{ pkg.savingsPercent }}%
                      </span>
                    @endif
                  </div>
                  @if(pkg.description)
                    <p class="text-sm opacity-60 mt-1">{{ pkg.description }}</p>
                  @endif
                  <p class="text-xs opacity-40 mt-2">{{ pkg.serviceIds.length }} services included</p>
                  <div class="flex justify-between items-end mt-4">
                    <div>
                      <span class="text-sm opacity-50">{{ pkg.durationMinutes }} min</span>
                    </div>
                    <div class="text-right">
                      <span class="text-xl font-bold" style="color: var(--theme-primary)">{{ pkg.formattedPackagePrice || (currencyService.getCurrencySymbol(customerCurrency || businessCurrency || 'NGN') + Number(pkg.convertedPackagePrice || pkg.packagePrice).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })) }}</span>
                      @if((pkg.convertedOriginalPrice || pkg.originalPrice) > (pkg.convertedPackagePrice || pkg.packagePrice))
                        <span class="text-sm opacity-50 line-through ml-1">{{ pkg.formattedOriginalPrice || (currencyService.getCurrencySymbol(customerCurrency || businessCurrency || 'NGN') + Number(pkg.convertedOriginalPrice || pkg.originalPrice).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })) }}</span>
                      @endif
                    </div>
                  </div>
                </div>
              @endeach
            </div>
          </section>
        @endif

        @if(portfolioItems && portfolioItems.length > 0)
          <section x-data="{ lightboxOpen: false, lightboxImage: '', lightboxTitle: '', lightboxDesc: '' }">
            <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">üì∏ Our Work</h2>
            <div class="grid grid-cols-2 sm:grid-cols-3 gap-2 sm:gap-3">
              @each(item in portfolioItems)
                <div
                  class="group relative aspect-square rounded-2xl overflow-hidden cursor-pointer {{ item.isFeatured ? 'ring-4 ring-offset-2' : '' }}"
                  style="{{ item.isFeatured ? 'ring-color: var(--theme-primary)' : '' }}"
                  @click="lightboxImage = '{{ item.image }}'; lightboxTitle = '{{ item.title }}'; lightboxDesc = '{{ item.description || '' }}'; lightboxOpen = true"
                >
                  <img src="{{ item.image }}" alt="{{ item.title }}" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300" />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <div class="absolute bottom-0 left-0 right-0 p-3">
                      <h3 class="text-white font-bold text-sm truncate">{{ item.title }}</h3>
                      @if(item.service)
                        <p class="text-white/70 text-xs mt-0.5">{{ item.service.name }}</p>
                      @endif
                    </div>
                  </div>
                  @if(item.isFeatured)
                    <div class="absolute top-2 right-2 px-2 py-1 rounded-full text-xs font-bold text-white" style="background: linear-gradient(135deg, var(--theme-primary), var(--theme-accent))">
                      ‚≠ê
                    </div>
                  @endif
                </div>
              @endeach
            </div>

            {{-- Lightbox Modal --}}
            <div
              x-show="lightboxOpen"
              x-cloak
              x-transition:enter="transition ease-out duration-300"
              x-transition:enter-start="opacity-0 scale-95"
              x-transition:enter-end="opacity-100 scale-100"
              x-transition:leave="transition ease-in duration-200"
              x-transition:leave-start="opacity-100 scale-100"
              x-transition:leave-end="opacity-0 scale-95"
              @click="lightboxOpen = false"
              @keydown.escape.window="lightboxOpen = false"
              class="fixed inset-0 z-50 flex items-center justify-center bg-black/80 backdrop-blur-sm p-4"
            >
              <div @click.stop class="relative max-w-4xl max-h-[90vh] w-full">
                <button @click="lightboxOpen = false" class="absolute -top-12 right-0 text-white hover:scale-110 transition-transform text-3xl">
                  ‚úï
                </button>
                <img :src="lightboxImage" :alt="lightboxTitle" class="w-full max-h-[80vh] object-contain rounded-2xl shadow-2xl" />
                <div x-show="lightboxTitle" class="mt-4 text-center">
                  <h3 class="text-white font-bold text-xl" x-text="lightboxTitle"></h3>
                  <p x-show="lightboxDesc" class="text-white/70 text-sm mt-2" x-text="lightboxDesc"></p>
                </div>
              </div>
            </div>
          </section>
        @elseif(theme?.showGallery && theme?.galleryImages && theme.galleryImages.length > 0)
          <section>
            <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">üì∏ Portfolio</h2>
            <div class="grid grid-cols-2 sm:grid-cols-3 gap-2 sm:gap-3">
              @each(image in theme.galleryImages)
                <div class="aspect-square rounded-2xl overflow-hidden">
                  <img src="{{ image }}" alt="" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300" />
                </div>
              @end
            </div>
          </section>
        @endif

        @if(theme?.showAbout && theme?.aboutText)
          <section class="card-vibrant p-6">
            <h2 class="text-xl font-bold mb-4 flex items-center gap-2">üí¨ About</h2>
            <p class="opacity-70 leading-relaxed whitespace-pre-line">{{ theme.aboutText }}</p>
          </section>
        @endif
      </div>

      <div class="lg:col-span-2">
        <div class="card-vibrant p-6 sticky top-6">
          <h3 class="text-xl font-bold mb-6 flex items-center gap-2">üìÖ Book Now</h3>
          
          <div x-show="!selectedService && !selectedPackage" class="text-center py-8">
            <div class="text-5xl mb-4">üëÜ</div>
            <p class="opacity-60">Pick a service or package to start</p>
          </div>

          <div x-show="selectedService || selectedPackage" x-cloak class="space-y-4">
            <div class="p-4 rounded-xl" style="background: var(--theme-secondary)">
              <template x-if="selectedPackage">
                <div>
                  <div class="flex items-center gap-2">
                    <p class="font-bold" x-text="selectedPackage?.name"></p>
                    <span class="px-2 py-0.5 text-xs font-bold rounded-full text-white" style="background: linear-gradient(135deg, var(--theme-primary), var(--theme-accent))">Package</span>
                  </div>
                  <p class="text-sm opacity-60"><span x-text="selectedPackage?.duration"></span> min ‚Ä¢ {{ currencyService.getCurrencySymbol(customerCurrency || businessCurrency || 'NGN') }}<span x-text="(selectedPackage?.convertedPackagePrice || selectedPackage?.price)?.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })"></span></p>
                </div>
              </template>
              <template x-if="!selectedPackage && selectedService">
                <div>
                  <p class="font-bold" x-text="selectedService?.name"></p>
                  <p class="text-sm opacity-60"><span x-text="selectedService?.duration"></span> min ‚Ä¢ {{ currencyService.getCurrencySymbol(customerCurrency || businessCurrency || 'NGN') }}<span x-text="(selectedService?.convertedPrice || selectedService?.price)?.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })"></span></p>
                </div>
              </template>
            </div>

            @if(staff.length > 1)
              <select x-model="selectedStaffId" @change="selectedDate && fetchTimeSlots()" class="w-full px-4 py-3 rounded-xl border-2 border-transparent focus:border-pink-200 transition-colors mb-2 min-h-[48px]" style="background: var(--theme-secondary)">
                <option value="">üé≤ Any available</option>
                @each(member in staff)
                  <option value="{{ member.id }}">{{ member.fullName }}</option>
                @end
              </select>
            @endif

            @include('partials/booking-datetime-picker')

            <div x-show="selectedTime" class="space-y-3 pt-4">
              <input type="text" x-model="customerName" placeholder="Your name ‚ú®" class="w-full px-4 py-3 rounded-xl border-2 border-transparent focus:border-pink-200 transition-colors min-h-[48px]" style="background: var(--theme-secondary)" required />
              <input type="email" x-model="customerEmail" placeholder="Email üìß" class="w-full px-4 py-3 rounded-xl border-2 border-transparent focus:border-pink-200 transition-colors min-h-[48px]" style="background: var(--theme-secondary)" required />
              <input type="tel" x-model="customerPhone" placeholder="Phone üì±" class="w-full px-4 py-3 rounded-xl border-2 border-transparent focus:border-pink-200 transition-colors min-h-[48px]" style="background: var(--theme-secondary)" />
            </div>

            <button
              x-show="selectedTime && customerName && customerEmail"
              @click="submitBooking()"
              :disabled="submitting"
              class="btn-primary w-full py-4 text-white font-bold text-lg transition-all"
            >
              <span x-show="!submitting">Let's Go! üöÄ</span>
              <span x-show="submitting">Loading... ‚ú®</span>
            </button>
          </div>
        </div>
      </div>
    </div>

    <footer class="text-center py-12 opacity-50 text-sm">
      Powered by <a href="/" class="font-medium hover:opacity-80" style="color: var(--theme-primary)">FastAppoint</a> ‚ú®
    </footer>
  </div>

  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
  <script>
    function bookingApp() {
      const today = new Date()
      today.setHours(0, 0, 0, 0)
      
      return {
        selectedService: null,
        selectedPackage: null,
        selectedStaffId: '',
        selectedDate: '',
        selectedTime: '',
        timeSlots: [],
        loadingSlots: false,
        customerName: '',
        customerEmail: '',
        customerPhone: '',
        submitting: false,
        minDate: new Date().toISOString().split('T')[0],
        datePickerOpen: false,
        calMonth: today.getMonth(),
        calYear: today.getFullYear(),
        timeFilter: 'all',

        selectService(id, name, price, duration) {
          this.selectedService = { id, name, price, duration }
          this.selectedPackage = null
          this.selectedTime = ''
          this.timeSlots = []
          if (this.selectedDate) this.fetchTimeSlots()
        },

        selectPackage(id, name, price, duration, serviceIds) {
          this.selectedPackage = { id, name, price, duration, serviceIds }
          this.selectedService = { id: serviceIds[0], name, price, duration, isPackage: true, packageId: id }
          this.selectedTime = ''
          this.timeSlots = []
          if (this.selectedDate) this.fetchTimeSlots()
        },

        async fetchTimeSlots() {
          if (!this.selectedService || !this.selectedDate) return
          this.loadingSlots = true
          this.timeSlots = []
          try {
            let url = `/book/{{ business.slug }}/service/${this.selectedService.id}/slots?date=${this.selectedDate}`
            if (this.selectedStaffId) url += `&staffId=${this.selectedStaffId}`
            const res = await fetch(url)
            const data = await res.json()
            this.timeSlots = data.slots || []
          } catch (e) { console.error(e) }
          this.loadingSlots = false
        },

        formatTime(time) {
          if (!time) return ''
          const [h, m] = time.split(':')
          const hour = parseInt(h)
          const suffix = hour >= 12 ? 'PM' : 'AM'
          const displayHour = hour % 12 || 12
          return `${displayHour}:${m} ${suffix}`
        },

        formatDisplayDate(dateStr) {
          if (!dateStr) return ''
          const date = new Date(dateStr + 'T00:00:00')
          return date.toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric' })
        },

        get calMonthYearDisplay() {
          return new Date(this.calYear, this.calMonth).toLocaleDateString('en-US', { month: 'long', year: 'numeric' })
        },

        get calendarDays() {
          const days = []
          const firstDay = new Date(this.calYear, this.calMonth, 1)
          const lastDay = new Date(this.calYear, this.calMonth + 1, 0)
          const startingDay = firstDay.getDay()
          const todayDate = new Date()
          todayDate.setHours(0, 0, 0, 0)

          for (let i = 0; i < startingDay; i++) {
            days.push({ date: null, day: null })
          }

          for (let i = 1; i <= lastDay.getDate(); i++) {
            const date = new Date(this.calYear, this.calMonth, i)
            const dateStr = this.formatDateValue(date)
            days.push({
              date: dateStr,
              day: i,
              disabled: date < todayDate,
              today: date.getTime() === todayDate.getTime(),
              selected: dateStr === this.selectedDate
            })
          }
          return days
        },

        get filteredTimeSlots() {
          if (this.timeFilter === 'all') return this.timeSlots
          return this.timeSlots.filter(slot => {
            const hour = parseInt(slot.time.split(':')[0])
            if (this.timeFilter === 'morning') return hour >= 6 && hour < 12
            if (this.timeFilter === 'afternoon') return hour >= 12 && hour < 17
            if (this.timeFilter === 'evening') return hour >= 17 && hour < 24
            return true
          })
        },

        formatDateValue(date) {
          return `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, '0')}-${String(date.getDate()).padStart(2, '0')}`
        },

        pickDate(dateStr) {
          this.selectedDate = dateStr
          this.datePickerOpen = false
          this.selectedTime = ''
          this.timeSlots = []
          this.fetchTimeSlots()
        },

        prevCalMonth() {
          if (this.calMonth === 0) { this.calMonth = 11; this.calYear-- } else { this.calMonth-- }
        },

        nextCalMonth() {
          if (this.calMonth === 11) { this.calMonth = 0; this.calYear++ } else { this.calMonth++ }
        },

        goToToday() {
          const todayDate = new Date()
          this.calMonth = todayDate.getMonth()
          this.calYear = todayDate.getFullYear()
          this.pickDate(this.formatDateValue(todayDate))
        },

        clearDateSelection() {
          this.selectedDate = ''
          this.selectedTime = ''
          this.timeSlots = []
          this.datePickerOpen = false
        },

        async submitBooking() {
          if (this.submitting) return
          this.submitting = true
          try {
            const res = await fetch(`/book/{{ business.slug }}/service/${this.selectedService.id}`, {
              method: 'POST',
              headers: { 'Content-Type': 'application/json', 'X-CSRF-TOKEN': '{{ csrfToken }}' },
              body: JSON.stringify({
                date: this.selectedDate, time: this.selectedTime,
                customerName: this.customerName, customerEmail: this.customerEmail,
                customerPhone: this.customerPhone, staffId: this.selectedStaffId || undefined,
                packageId: this.selectedPackage?.id || undefined
              })
            })
            const data = await res.json()
            if (data.error) {
              alert(data.error)
            } else if (data.redirect) {
              window.location.href = data.redirect
            }
          } catch (e) { console.error(e); alert('Something went wrong. Please try again.') }
          this.submitting = false
        }
      }
    }
  </script>
</body>
</html>

