<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{ business.name }} - Book Now</title>
  <meta name="description" content="{{ theme?.tagline || business.description || `Book an appointment with ${business.name}` }}" />
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Lora:wght@400;500;600&display=swap" rel="stylesheet" />
  @if(theme)
    <link href="{{ theme.getGoogleFontsUrl() }}" rel="stylesheet" />
  @endif
  <style>
    :root {
      {{ theme?.getCssVariables() || `
        --theme-primary: #78716c;
        --theme-secondary: #fafaf9;
        --theme-accent: #a8a29e;
        --theme-text: #1c1917;
        --theme-background: #ffffff;
        --theme-font-heading: 'Playfair Display', serif;
        --theme-font-body: 'Lora', serif;
      ` }}
    }
    body {
      font-family: var(--theme-font-body);
      color: var(--theme-text);
      background-color: var(--theme-background);
    }
    h1, h2, h3, h4, h5, h6 {
      font-family: var(--theme-font-heading);
    }
    .btn-primary {
      background-color: var(--theme-primary);
      @if(theme?.buttonStyle === 'pill')
        border-radius: 9999px;
      @elseif(theme?.buttonStyle === 'square')
        border-radius: 0.25rem;
      @else
        border-radius: 0.5rem;
      @endif
    }
    .elegant-divider {
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    .elegant-divider::before,
    .elegant-divider::after {
      content: '';
      flex: 1;
      height: 1px;
      background: linear-gradient(to right, transparent, var(--theme-accent), transparent);
    }
    {{ theme?.customCss || '' }}
    [x-cloak] { display: none !important; }
  </style>
</head>
<body class="min-h-screen" x-data="bookingApp()">
  <div class="border-b" style="border-color: var(--theme-secondary)">
    <div class="max-w-5xl mx-auto px-4 py-6">
      <div class="text-center">
        @if(business.logo)
          <img src="{{ business.logo }}" alt="{{ business.name }}" class="w-20 h-20 rounded-full object-cover mx-auto mb-4 border-4" style="border-color: var(--theme-secondary)" />
        @else
          <div class="w-20 h-20 rounded-full mx-auto mb-4 flex items-center justify-center text-3xl font-serif border-4" style="border-color: var(--theme-primary); color: var(--theme-primary)">
            {{ business.name.charAt(0) }}
          </div>
        @endif
        <h1 class="text-4xl font-serif tracking-wide">{{ business.name }}</h1>
        @if(theme?.tagline)
          <p class="text-lg mt-3 italic opacity-70">{{ theme.tagline }}</p>
        @endif
        <div class="elegant-divider mt-6">
          <span class="px-4 text-sm uppercase tracking-widest opacity-60">{{ business.category }}</span>
        </div>
      </div>
    </div>
  </div>

  @if(theme?.heroStyle === 'image' && theme?.heroImage)
    <div class="h-64 bg-cover bg-center" style="background-image: url('{{ theme.heroImage }}')"></div>
  @endif

  <div class="max-w-5xl mx-auto px-4 py-12">
    <div class="grid lg:grid-cols-5 gap-12">
      <div class="lg:col-span-3 space-y-12">
        <div>
          <h2 class="text-2xl font-serif mb-8 text-center">
            <span class="elegant-divider">Services</span>
          </h2>
          <div class="space-y-6">
            @each(service in services)
              <div
                class="p-6 border rounded-lg cursor-pointer transition-all hover:shadow-md"
                :class="{ 'ring-1': selectedService?.id === {{ service.id }} }"
                :style="selectedService?.id === {{ service.id }} ? 'border-color: var(--theme-primary)' : 'border-color: var(--theme-secondary)'"
                @click="selectService({{ service.id }}, '{{ service.name }}', {{ service.convertedPrice || service.price }}, {{ service.durationMinutes || 30 }})"
              >
                <div class="flex gap-5">
                  @if(service.image)
                    <img src="{{ service.image }}" alt="{{ service.name }}" class="w-24 h-24 rounded-lg object-cover flex-shrink-0" />
                  @endif
                  <div class="flex-1 flex justify-between items-start">
                    <div>
                      <h3 class="font-serif text-xl">{{ service.name }}</h3>
                      @if(service.description)
                        <p class="text-sm opacity-60 mt-2 italic">{{ service.description }}</p>
                      @endif
                    </div>
                    <div class="text-right">
                      <p class="text-2xl font-serif" style="color: var(--theme-primary)">{{ service.formattedPrice || (currencyService.getCurrencySymbol(customerCurrency || businessCurrency || 'NGN') + Number(service.convertedPrice || service.price).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })) }}</p>
                      <p class="text-sm opacity-50 mt-1">{{ service.durationMinutes || 30 }} min</p>
                    </div>
                  </div>
                </div>
              </div>
            @end
          </div>
        </div>

        @if(packages && packages.length > 0)
          <div>
            <h2 class="text-2xl font-serif mb-8 text-center">
              <span class="elegant-divider">Packages</span>
            </h2>
            <p class="text-sm opacity-60 text-center mb-6 italic">Save more with our curated service bundles</p>
            <div class="space-y-6">
              @each(pkg in packages)
                <div
                  class="p-6 border rounded-lg cursor-pointer transition-all hover:shadow-md"
                  :class="{ 'ring-1': selectedPackage?.id === {{ pkg.id }} }"
                  :style="selectedPackage?.id === {{ pkg.id }} ? 'border-color: var(--theme-primary)' : 'border-color: var(--theme-secondary)'"
                  @click="selectPackage({{ pkg.id }}, '{{ pkg.name }}', {{ pkg.packagePrice }}, {{ pkg.durationMinutes }}, {{ JSON.stringify(pkg.serviceIds) }})"
                >
                  <div class="flex gap-5">
                    @if(pkg.image)
                      <img src="{{ pkg.image }}" alt="{{ pkg.name }}" class="w-24 h-24 rounded-lg object-cover flex-shrink-0" />
                    @endif
                    <div class="flex-1 flex justify-between items-start">
                      <div>
                        <div class="flex items-center gap-2">
                          <h3 class="font-serif text-xl">{{ pkg.name }}</h3>
                          @if(pkg.savingsPercent > 0)
                            <span class="px-2 py-0.5 text-xs font-medium rounded" style="background: var(--theme-secondary); color: var(--theme-primary)">
                              Save {{ pkg.savingsPercent }}%
                            </span>
                          @endif
                        </div>
                        @if(pkg.description)
                          <p class="text-sm opacity-60 mt-2 italic">{{ pkg.description }}</p>
                        @endif
                        <p class="text-xs opacity-50 mt-2">Includes {{ pkg.serviceIds.length }} services</p>
                      </div>
                      <div class="text-right">
                        <p class="text-2xl font-serif" style="color: var(--theme-primary)">{{ pkg.formattedPackagePrice || (currencyService.getCurrencySymbol(customerCurrency || businessCurrency || 'NGN') + Number(pkg.convertedPackagePrice || pkg.packagePrice).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })) }}</p>
                        @if((pkg.convertedOriginalPrice || pkg.originalPrice) > (pkg.convertedPackagePrice || pkg.packagePrice))
                          <p class="text-sm opacity-50 line-through">{{ pkg.formattedOriginalPrice || (currencyService.getCurrencySymbol(customerCurrency || businessCurrency || 'NGN') + Number(pkg.convertedOriginalPrice || pkg.originalPrice).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })) }}</p>
                        @endif
                        <p class="text-sm opacity-50 mt-1">{{ pkg.durationMinutes }} min</p>
                      </div>
                    </div>
                  </div>
                </div>
              @endeach
            </div>
          </div>
        @endif

        @if(theme?.showAbout && theme?.aboutText)
          <div>
            <h2 class="text-2xl font-serif mb-6 text-center">
              <span class="elegant-divider">About</span>
            </h2>
            <div class="prose prose-stone max-w-none">
              <p class="leading-relaxed whitespace-pre-line opacity-80">{{ theme.aboutText }}</p>
            </div>
          </div>
        @endif

        @if(portfolioItems && portfolioItems.length > 0)
          <div x-data="{ lightboxOpen: false, lightboxImage: '', lightboxTitle: '', lightboxDesc: '' }">
            <h2 class="text-2xl font-serif mb-6 text-center">
              <span class="elegant-divider">Our Work</span>
            </h2>
            <div class="grid grid-cols-2 gap-4">
              @each(item in portfolioItems)
                <div
                  class="group relative aspect-[4/3] rounded-lg overflow-hidden cursor-pointer {{ item.isFeatured ? 'ring-2 ring-offset-2' : '' }}"
                  style="{{ item.isFeatured ? 'ring-color: var(--theme-primary)' : '' }}"
                  @click="lightboxImage = '{{ item.image }}'; lightboxTitle = '{{ item.title }}'; lightboxDesc = '{{ item.description || '' }}'; lightboxOpen = true"
                >
                  <img src="{{ item.image }}" alt="{{ item.title }}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <div class="absolute bottom-0 left-0 right-0 p-4">
                      <h3 class="text-white font-serif text-lg">{{ item.title }}</h3>
                      @if(item.service)
                        <p class="text-white/70 text-sm italic mt-1">{{ item.service.name }}</p>
                      @endif
                    </div>
                  </div>
                  @if(item.isFeatured)
                    <div class="absolute top-3 right-3 px-2 py-1 rounded text-xs font-medium text-white uppercase tracking-wide" style="background-color: var(--theme-primary)">
                      Featured
                    </div>
                  @endif
                </div>
              @endeach
            </div>

            {{-- Lightbox Modal --}}
            <div
              x-show="lightboxOpen"
              x-cloak
              x-transition:enter="transition ease-out duration-300"
              x-transition:enter-start="opacity-0"
              x-transition:enter-end="opacity-100"
              x-transition:leave="transition ease-in duration-200"
              x-transition:leave-start="opacity-100"
              x-transition:leave-end="opacity-0"
              @click="lightboxOpen = false"
              @keydown.escape.window="lightboxOpen = false"
              class="fixed inset-0 z-50 flex items-center justify-center bg-black/85 p-4"
            >
              <div @click.stop class="relative max-w-4xl max-h-[90vh] w-full">
                <button @click="lightboxOpen = false" class="absolute -top-12 right-0 text-white hover:opacity-70">
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                </button>
                <img :src="lightboxImage" :alt="lightboxTitle" class="w-full max-h-[80vh] object-contain rounded-lg" />
                <div x-show="lightboxTitle" class="mt-4 text-center">
                  <h3 class="text-white font-serif text-xl" x-text="lightboxTitle"></h3>
                  <p x-show="lightboxDesc" class="text-white/70 text-sm italic mt-2" x-text="lightboxDesc"></p>
                </div>
              </div>
            </div>
          </div>
        @elseif(theme?.showGallery && theme?.galleryImages && theme.galleryImages.length > 0)
          <div>
            <h2 class="text-2xl font-serif mb-6 text-center">
              <span class="elegant-divider">Gallery</span>
            </h2>
            <div class="grid grid-cols-2 gap-4">
              @each(image in theme.galleryImages)
                <div class="aspect-[4/3] rounded-lg overflow-hidden">
                  <img src="{{ image }}" alt="Gallery" class="w-full h-full object-cover hover:scale-105 transition-transform duration-500" />
                </div>
              @end
            </div>
          </div>
        @endif
      </div>

      <div class="lg:col-span-2">
        <div class="border rounded-lg p-6 sticky top-6" style="border-color: var(--theme-secondary); background: var(--theme-secondary)">
          <h3 class="font-serif text-xl mb-6 text-center">Reserve Your Appointment</h3>
          
          <div x-show="!selectedService && !selectedPackage" class="text-center py-8 opacity-50 italic">
            <p>Please select a service or package to begin</p>
          </div>

          <div x-show="selectedService || selectedPackage" x-cloak class="space-y-4">
            <div class="p-4 bg-white rounded-lg border" style="border-color: var(--theme-accent)">
              <template x-if="selectedPackage">
                <div>
                  <div class="flex items-center gap-2">
                    <p class="font-serif text-lg" x-text="selectedPackage?.name"></p>
                    <span class="px-2 py-0.5 text-xs font-medium rounded" style="background: var(--theme-secondary); color: var(--theme-primary)">Package</span>
                  </div>
                  <p class="text-sm opacity-60"><span x-text="selectedPackage?.duration"></span> minutes • {{ currencyService.getCurrencySymbol(customerCurrency || businessCurrency || 'NGN') }}<span x-text="(selectedPackage?.convertedPackagePrice || selectedPackage?.price)?.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })"></span></p>
                </div>
              </template>
              <template x-if="!selectedPackage && selectedService">
                <div>
                  <p class="font-serif text-lg" x-text="selectedService?.name"></p>
                  <p class="text-sm opacity-60"><span x-text="selectedService?.duration"></span> minutes • {{ currencyService.getCurrencySymbol(customerCurrency || businessCurrency || 'NGN') }}<span x-text="(selectedService?.convertedPrice || selectedService?.price)?.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })"></span></p>
                </div>
              </template>
            </div>

            @if(staff.length > 1)
              <div class="mb-2">
                <label class="block text-sm font-medium mb-2 uppercase tracking-wide">Preferred Specialist</label>
                <select x-model="selectedStaffId" @change="selectedDate && fetchTimeSlots()" class="w-full px-4 py-3 border rounded-lg bg-white min-h-[48px]" style="border-color: var(--theme-accent)">
                  <option value="">No preference</option>
                  @each(member in staff)
                    <option value="{{ member.id }}">{{ member.fullName }}</option>
                  @end
                </select>
              </div>
            @endif

            @include('partials/booking-datetime-picker')

            <div x-show="selectedTime" class="space-y-3 pt-4 border-t" style="border-color: var(--theme-accent)">
              <input type="text" x-model="customerName" placeholder="Full Name" class="w-full px-4 py-3 border rounded-lg bg-white min-h-[48px]" style="border-color: var(--theme-accent)" required />
              <input type="email" x-model="customerEmail" placeholder="Email Address" class="w-full px-4 py-3 border rounded-lg bg-white min-h-[48px]" style="border-color: var(--theme-accent)" required />
              <input type="tel" x-model="customerPhone" placeholder="Phone Number" class="w-full px-4 py-3 border rounded-lg bg-white min-h-[48px]" style="border-color: var(--theme-accent)" />
            </div>

            <button
              x-show="selectedTime && customerName && customerEmail"
              @click="submitBooking()"
              :disabled="submitting"
              class="btn-primary w-full py-3 text-white font-medium uppercase tracking-wide transition-all"
            >
              <span x-show="!submitting">Confirm Reservation</span>
              <span x-show="submitting">Processing...</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <footer class="py-8 border-t text-center" style="border-color: var(--theme-secondary)">
    <p class="text-sm opacity-50">Powered by <a href="/" class="hover:underline" style="color: var(--theme-primary)">FastAppoint</a></p>
  </footer>

  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
  <script>
    function bookingApp() {
      const today = new Date()
      today.setHours(0, 0, 0, 0)
      
      return {
        selectedService: null,
        selectedPackage: null,
        selectedStaffId: '',
        selectedDate: '',
        selectedTime: '',
        timeSlots: [],
        loadingSlots: false,
        customerName: '',
        customerEmail: '',
        customerPhone: '',
        submitting: false,
        minDate: new Date().toISOString().split('T')[0],
        datePickerOpen: false,
        calMonth: today.getMonth(),
        calYear: today.getFullYear(),
        timeFilter: 'all',

        selectService(id, name, price, duration) {
          this.selectedService = { id, name, price, duration }
          this.selectedPackage = null
          this.selectedTime = ''
          this.timeSlots = []
          if (this.selectedDate) {
            this.fetchTimeSlots()
          }
        },

        selectPackage(id, name, price, duration, serviceIds) {
          this.selectedPackage = { id, name, price, duration, serviceIds }
          this.selectedService = { id: serviceIds[0], name, price, duration, isPackage: true, packageId: id }
          this.selectedTime = ''
          this.timeSlots = []
          if (this.selectedDate) {
            this.fetchTimeSlots()
          }
        },

        async fetchTimeSlots() {
          if (!this.selectedService || !this.selectedDate) return
          this.loadingSlots = true
          this.timeSlots = []
          try {
            let url = `/book/{{ business.slug }}/service/${this.selectedService.id}/slots?date=${this.selectedDate}`
            if (this.selectedStaffId) {
              url += `&staffId=${this.selectedStaffId}`
            }
            const res = await fetch(url)
            const data = await res.json()
            this.timeSlots = data.slots || []
          } catch (e) {
            console.error(e)
          }
          this.loadingSlots = false
        },

        formatTime(time) {
          if (!time) return ''
          const [h, m] = time.split(':')
          const hour = parseInt(h)
          const suffix = hour >= 12 ? 'PM' : 'AM'
          const displayHour = hour % 12 || 12
          return `${displayHour}:${m} ${suffix}`
        },

        formatDisplayDate(dateStr) {
          if (!dateStr) return ''
          const date = new Date(dateStr + 'T00:00:00')
          return date.toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric' })
        },

        get calMonthYearDisplay() {
          return new Date(this.calYear, this.calMonth).toLocaleDateString('en-US', { month: 'long', year: 'numeric' })
        },

        get calendarDays() {
          const days = []
          const firstDay = new Date(this.calYear, this.calMonth, 1)
          const lastDay = new Date(this.calYear, this.calMonth + 1, 0)
          const startingDay = firstDay.getDay()
          const todayDate = new Date()
          todayDate.setHours(0, 0, 0, 0)

          for (let i = 0; i < startingDay; i++) {
            days.push({ date: null, day: null })
          }

          for (let i = 1; i <= lastDay.getDate(); i++) {
            const date = new Date(this.calYear, this.calMonth, i)
            const dateStr = this.formatDateValue(date)
            days.push({
              date: dateStr,
              day: i,
              disabled: date < todayDate,
              today: date.getTime() === todayDate.getTime(),
              selected: dateStr === this.selectedDate
            })
          }
          return days
        },

        get filteredTimeSlots() {
          if (this.timeFilter === 'all') return this.timeSlots
          return this.timeSlots.filter(slot => {
            const hour = parseInt(slot.time.split(':')[0])
            if (this.timeFilter === 'morning') return hour >= 6 && hour < 12
            if (this.timeFilter === 'afternoon') return hour >= 12 && hour < 17
            if (this.timeFilter === 'evening') return hour >= 17 && hour < 24
            return true
          })
        },

        formatDateValue(date) {
          return `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, '0')}-${String(date.getDate()).padStart(2, '0')}`
        },

        pickDate(dateStr) {
          this.selectedDate = dateStr
          this.datePickerOpen = false
          this.selectedTime = ''
          this.timeSlots = []
          this.fetchTimeSlots()
        },

        prevCalMonth() {
          if (this.calMonth === 0) { this.calMonth = 11; this.calYear-- } else { this.calMonth-- }
        },

        nextCalMonth() {
          if (this.calMonth === 11) { this.calMonth = 0; this.calYear++ } else { this.calMonth++ }
        },

        goToToday() {
          const todayDate = new Date()
          this.calMonth = todayDate.getMonth()
          this.calYear = todayDate.getFullYear()
          this.pickDate(this.formatDateValue(todayDate))
        },

        clearDateSelection() {
          this.selectedDate = ''
          this.selectedTime = ''
          this.timeSlots = []
          this.datePickerOpen = false
        },

        async submitBooking() {
          if (this.submitting) return
          this.submitting = true
          try {
            const res = await fetch(`/book/{{ business.slug }}/service/${this.selectedService.id}`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
                'X-CSRF-TOKEN': '{{ csrfToken }}'
              },
              body: JSON.stringify({
                date: this.selectedDate,
                time: this.selectedTime,
                customerName: this.customerName,
                customerEmail: this.customerEmail,
                customerPhone: this.customerPhone,
                staffId: this.selectedStaffId || undefined,
                packageId: this.selectedPackage?.id || undefined
              })
            })
            const data = await res.json()
            if (data.error) {
              alert(data.error)
            } else if (data.redirect) {
              window.location.href = data.redirect
            }
          } catch (e) {
            console.error(e)
            alert('Something went wrong. Please try again.')
          }
          this.submitting = false
        }
      }
    }
  </script>
</body>
</html>

