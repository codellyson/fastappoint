<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Payment - {{ booking.business.name }}</title>
  <link rel="preconnect" href="https://fonts.bunny.net" />
  <link href="https://fonts.bunny.net/css?family=instrument-sans:400,500,600,700&display=swap" rel="stylesheet" />

  <style>
    :root {
      --sand-1: #fdfdfc;
      --sand-2: #f9f9f8;
      --sand-3: #f1f0ef;
      --sand-4: #e9e8e6;
      --sand-5: #e2e1de;
      --sand-6: #dad9d6;
      --sand-7: #cfceca;
      --sand-8: #bcbbb5;
      --sand-9: #8d8d86;
      --sand-10: #82827c;
      --sand-11: #63635e;
      --sand-12: #21201c;
      --success: #10b981;
      --error: #ef4444;
      --warning: #f59e0b;
    }
  </style>

  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ["Instrument Sans", "sans-serif"]
          },
          colors: {
            primary: {
              DEFAULT: "#5A45FF",
              lighter: "#a599ff"
            },
            sand: {
              1: "var(--sand-1)",
              2: "var(--sand-2)",
              3: "var(--sand-3)",
              4: "var(--sand-4)",
              5: "var(--sand-5)",
              6: "var(--sand-6)",
              7: "var(--sand-7)",
              8: "var(--sand-8)",
              9: "var(--sand-9)",
              10: "var(--sand-10)",
              11: "var(--sand-11)",
              12: "var(--sand-12)"
            },
            success: "var(--success)",
            error: "var(--error)",
            warning: "var(--warning)"
          }
        }
      }
    };
  </script>
  @if(paymentProvider === 'paystack')
    <script src="https://js.paystack.co/v1/inline.js"></script>
  @else
    <script src="https://js.stripe.com/v3/"></script>
  @endif
</head>
<body class="bg-sand-2 text-sand-12 min-h-screen font-sans">
  <div class="max-w-md mx-auto px-4 py-8">
    {{-- Business Header --}}
    <div class="text-center mb-8">
      <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
        <span class="text-2xl font-bold text-primary">{{ booking.business.name.charAt(0) }}</span>
      </div>
      <h1 class="text-xl font-bold text-sand-12">{{ booking.business.name }}</h1>
    </div>

    {{-- Booking Summary --}}
    <div class="bg-white border border-sand-7 rounded-xl p-6 mb-6">
      <h2 class="text-lg font-semibold text-sand-12 mb-4">Booking Summary</h2>

      <div class="space-y-3">
        <div class="flex justify-between">
          <span class="text-sand-11">Service</span>
          <span class="font-medium text-sand-12">{{ booking.service.name }}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-sand-11">Date</span>
          <span class="font-medium text-sand-12">{{ booking.date.toFormat('EEE, MMM d, yyyy') }}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-sand-11">Time</span>
          <span class="font-medium text-sand-12">{{ booking.startTime }} - {{ booking.endTime }}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-sand-11">Duration</span>
          <span class="font-medium text-sand-12">{{ booking.service.formattedDuration }}</span>
        </div>
        <div class="border-t border-sand-6 pt-3 mt-3 space-y-2">
          @if(booking.depositAmount > 0)
            <div class="flex justify-between">
              <span class="text-sand-11">Service Total</span>
              <span class="text-sand-12">{{ currencyService.getCurrencySymbol(customerCurrency || businessCurrency || 'NGN') }}{{ Number(totalAmount || (convertedDepositAmount + convertedBalanceDue)).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) }}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-sand-11">Deposit (due now)</span>
              <span class="font-bold text-primary text-lg">{{ currencyService.getCurrencySymbol(customerCurrency || businessCurrency || 'NGN') }}{{ Number(convertedAmount || convertedDepositAmount).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) }}</span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-sand-9">Balance (due at appointment)</span>
              <span class="text-sand-11">{{ currencyService.getCurrencySymbol(customerCurrency || businessCurrency || 'NGN') }}{{ Number(convertedBalanceDue).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) }}</span>
            </div>
          @else
            <div class="flex justify-between">
              <span class="font-medium text-sand-12">Total</span>
              <span class="font-bold text-primary text-lg">{{ currencyService.getCurrencySymbol(customerCurrency || businessCurrency || 'NGN') }}{{ Number(convertedAmount || booking.amount).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) }}</span>
            </div>
          @endif
        </div>
      </div>
    </div>

    {{-- Customer Info --}}
    <div class="bg-white border border-sand-7 rounded-xl p-6 mb-6">
      <h3 class="font-medium text-sand-12 mb-3">Your Information</h3>
      <div class="space-y-2 text-sm">
        <div class="flex justify-between">
          <span class="text-sand-11">Name</span>
          <span class="text-sand-12">{{ booking.customerName }}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-sand-11">Email</span>
          <span class="text-sand-12">{{ booking.customerEmail }}</span>
        </div>
        @if(booking.customerPhone)
          <div class="flex justify-between">
            <span class="text-sand-11">Phone</span>
            <span class="text-sand-12">{{ booking.customerPhone }}</span>
          </div>
        @endif
      </div>
    </div>

    {{-- Payment Status & Timer --}}
    @if(timeRemaining !== null && timeRemaining > 0)
      <div class="bg-warning/10 border border-warning/20 rounded-xl p-4 mb-4">
        <div class="flex items-center justify-between">
          <span class="text-sm text-sand-12">Time remaining to complete payment:</span>
          <span id="timer" class="font-mono font-semibold text-warning text-lg">--:--</span>
        </div>
      </div>
    @endif

    {{-- Error Message --}}
    @if(errorMessage)
      <div class="bg-error/10 border border-error/20 rounded-xl p-4 mb-4">
        <div class="flex items-start gap-2">
          <svg class="w-5 h-5 text-error mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <div>
            <p class="text-sm font-medium text-error mb-1">Payment Failed</p>
            <p class="text-sm text-sand-11">{{ errorMessage }}</p>
          </div>
        </div>
      </div>
    @endif

    {{-- Payment Attempts Info --}}
    @if(booking.paymentAttempts > 0)
      <div class="bg-sand-3 rounded-lg p-3 mb-4 text-center">
        <p class="text-sm text-sand-11">
          Payment attempts: <span class="font-medium">{{ booking.paymentAttempts }}/3</span>
        </p>
      </div>
    @endif

    {{-- Stripe Card Element (only shown for Stripe) --}}
    @if(paymentProvider === 'stripe')
      <div class="bg-white border border-sand-7 rounded-xl p-6 mb-6">
        <h3 class="font-medium text-sand-12 mb-4">Payment Details</h3>
        <div id="stripe-card-element" class="p-3 border border-sand-7 rounded-lg mb-3">
          <!-- Stripe Elements will create form elements here -->
        </div>
        <div id="stripe-card-errors" class="text-sm text-error mt-2" role="alert"></div>
      </div>
    @endif

    {{-- Pay Button --}}
    <button
      id="payBtn"
      onclick="{{ paymentProvider === 'paystack' ? 'payWithPaystack()' : 'payWithStripe()' }}"
      class="w-full py-4 bg-primary text-white font-semibold rounded-xl hover:bg-primary/90 text-lg disabled:opacity-50 disabled:cursor-not-allowed"
      {{ timeRemaining === 0 ? 'disabled' : '' }}
    >
      @if(timeRemaining === 0)
        Payment Expired
      @elseif(booking.depositAmount > 0)
        Pay Deposit {{ currencyService.getCurrencySymbol(customerCurrency || businessCurrency || 'NGN') }}{{ Number(convertedAmount || convertedDepositAmount).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) }}
      @else
        Pay {{ currencyService.getCurrencySymbol(customerCurrency || businessCurrency || 'NGN') }}{{ Number(convertedAmount || booking.amount).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) }}
      @endif
    </button>

    {{-- Retry Button (if applicable) --}}
    @if(canRetry && booking.paymentAttempts > 0 && booking.paymentAttempts < 3)
      <button
        onclick="location.reload()"
        class="w-full py-3 mt-3 border-2 border-primary text-primary font-medium rounded-xl hover:bg-primary/5"
      >
        Try Again
      </button>
    @endif

    <p class="text-center text-sm text-sand-11 mt-4">
      Secure payment powered by {{ paymentProvider === 'paystack' ? 'Paystack' : 'Stripe' }}
    </p>

    {{-- Footer --}}
    <div class="mt-12 text-center text-sm text-sand-10">
      Powered by <a href="/" class="text-primary hover:underline">FastAppoint</a>
    </div>
  </div>

  <script>
    // Timer countdown and payment status polling
    @if(timeRemaining !== null && timeRemaining > 0)
      let timeRemaining = {{ timeRemaining }};
      const timerElement = document.getElementById('timer');
      const payBtn = document.getElementById('payBtn');

      function formatTime(seconds) {
        const mins = Math.floor(seconds / 60);
        const secs = seconds % 60;
        return `${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
      }

      function updateTimer() {
        if (timeRemaining <= 0) {
          timerElement.textContent = '00:00';
          if (payBtn) {
            payBtn.disabled = true;
            payBtn.textContent = 'Payment Expired';
            payBtn.classList.add('opacity-50', 'cursor-not-allowed');
          }
          // Redirect after 2 seconds
          setTimeout(() => {
            window.location.href = '/book/{{ booking.business.slug }}';
          }, 2000);
          return;
        }

        timerElement.textContent = formatTime(timeRemaining);
        timeRemaining--;
      }

      updateTimer();
      setInterval(updateTimer, 1000);
    @endif

    // Payment status polling (check every 3 seconds if payment is pending)
    @if(booking.paymentStatus === 'pending')
      let statusCheckInterval = setInterval(async () => {
        try {
          const response = await fetch('/book/{{ booking.business.slug }}/booking/{{ booking.id }}/payment-status');
          const data = await response.json();

          if (data.paymentStatus === 'paid' && data.status === 'confirmed') {
            clearInterval(statusCheckInterval);
            // Redirect to confirmation page
            window.location.href = '/book/{{ booking.business.slug }}/booking/{{ booking.id }}/confirmation';
          } else if (data.isPaymentExpired) {
            clearInterval(statusCheckInterval);
            window.location.href = '/book/{{ booking.business.slug }}';
          }
        } catch (error) {
          console.error('Error checking payment status:', error);
        }
      }, 3000); // Check every 3 seconds

      // Stop polling after 5 minutes
      setTimeout(() => {
        clearInterval(statusCheckInterval);
      }, 300000);
    @endif

    @if(paymentProvider === 'paystack')
      function payWithPaystack() {
        const payBtn = document.getElementById('payBtn');
        if (payBtn && payBtn.disabled) {
          return;
        }

        const handler = PaystackPop.setup({
          key: '{{ paystackPublicKey }}',
          email: '{{ booking.customerEmail }}',
          amount: {{ Math.round((convertedAmount || booking.amount) * 100) }},
          currency: '{{ customerCurrency || businessCurrency || 'NGN' }}',
          ref: '{{ booking.paymentReference }}',
          metadata: {
            booking_id: {{ booking.id }},
            business_slug: '{{ booking.business.slug }}',
            custom_fields: [
              {
                display_name: 'Service',
                variable_name: 'service',
                value: '{{ booking.service.name }}'
              }
            ]
          },
          callback: function(response) {
            window.location.href = '/book/{{ booking.business.slug }}/booking/{{ booking.id }}/verify?reference=' + response.reference + '&currency={{ customerCurrency || businessCurrency || 'NGN' }}';
          },
          onClose: function() {
            console.log('Payment window closed');
          }
        });
        handler.openIframe();
      }
    @else
      const stripe = Stripe('{{ stripePublicKey }}');
      let card;
      let clientSecret;
      let paymentIntentId;

      // Initialize Stripe Elements
      const elements = stripe.elements();
      card = elements.create('card', {
        style: {
          base: {
            fontSize: '16px',
            color: '#21201c',
            '::placeholder': {
              color: '#82827c',
            },
          },
        },
      });

      // Mount card element
      const cardElement = document.getElementById('stripe-card-element');
      if (cardElement) {
        card.mount('#stripe-card-element');
      }

      // Handle real-time validation errors
      card.on('change', function(event) {
        const displayError = document.getElementById('stripe-card-errors');
        if (displayError) {
          if (event.error) {
            displayError.textContent = event.error.message;
          } else {
            displayError.textContent = '';
          }
        }
      });

      async function payWithStripe() {
        const payBtn = document.getElementById('payBtn');
        const displayError = document.getElementById('stripe-card-errors');

        if (payBtn && payBtn.disabled) {
          return;
        }

        if (displayError) {
          displayError.textContent = '';
        }

        if (payBtn) {
          payBtn.disabled = true;
          payBtn.textContent = 'Processing...';
        }

        try {
          // Create payment intent via backend
          const response = await fetch('/book/{{ booking.business.slug }}/booking/{{ booking.id }}/create-payment-intent?currency={{ customerCurrency || businessCurrency || 'NGN' }}', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'X-CSRF-TOKEN': '{{ csrfToken }}'
            },
            credentials: 'same-origin'
          });

          if (!response.ok) {
            const errorData = await response.json();
            throw new Error(errorData.error || 'Failed to create payment intent');
          }

          const data = await response.json();
          clientSecret = data.clientSecret;
          paymentIntentId = data.paymentIntentId;

          // Confirm payment with card element
          const { error, paymentIntent } = await stripe.confirmCardPayment(clientSecret, {
            payment_method: {
              card: card,
            }
          });

          if (error) {
            if (displayError) {
              displayError.textContent = error.message;
            }
            if (payBtn) {
              payBtn.disabled = false;
              payBtn.textContent = '{{ booking.depositAmount > 0 ? "Pay Deposit" : "Pay" }} {{ currencyService.getCurrencySymbol(customerCurrency || businessCurrency || "NGN") }}{{ Number(convertedAmount || booking.amount).toLocaleString("en-US", { minimumFractionDigits: 2, maximumFractionDigits: 2 }) }}';
            }
          } else if (paymentIntent && paymentIntent.status === 'succeeded') {
            // Payment succeeded, redirect to verify
            window.location.href = '/book/{{ booking.business.slug }}/booking/{{ booking.id }}/verify?payment_intent=' + paymentIntentId + '&currency={{ customerCurrency || businessCurrency || "NGN" }}';
          }
        } catch (error) {
          console.error('Error:', error);
          if (displayError) {
            displayError.textContent = error.message || 'An error occurred. Please try again.';
          }
          if (payBtn) {
            payBtn.disabled = false;
            payBtn.textContent = '{{ booking.depositAmount > 0 ? "Pay Deposit" : "Pay" }} {{ currencyService.getCurrencySymbol(customerCurrency || businessCurrency || "NGN") }}{{ Number(convertedAmount || booking.amount).toLocaleString("en-US", { minimumFractionDigits: 2, maximumFractionDigits: 2 }) }}';
          }
        }
      }
    @endif
  </script>
</body>
</html>
