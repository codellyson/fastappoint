<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Payment - {{ booking.business.name }}</title>
  <link rel="preconnect" href="https://fonts.bunny.net" />
  <link href="https://fonts.bunny.net/css?family=instrument-sans:400,500,600,700&display=swap" rel="stylesheet" />

  <style>
    :root {
      --sand-1: #fdfdfc;
      --sand-2: #f9f9f8;
      --sand-3: #f1f0ef;
      --sand-4: #e9e8e6;
      --sand-5: #e2e1de;
      --sand-6: #dad9d6;
      --sand-7: #cfceca;
      --sand-8: #bcbbb5;
      --sand-9: #8d8d86;
      --sand-10: #82827c;
      --sand-11: #63635e;
      --sand-12: #21201c;
      --success: #10b981;
      --error: #ef4444;
      --warning: #f59e0b;
    }
  </style>

  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ["Instrument Sans", "sans-serif"]
          },
          colors: {
            primary: {
              DEFAULT: "#5A45FF",
              lighter: "#a599ff"
            },
            sand: {
              1: "var(--sand-1)",
              2: "var(--sand-2)",
              3: "var(--sand-3)",
              4: "var(--sand-4)",
              5: "var(--sand-5)",
              6: "var(--sand-6)",
              7: "var(--sand-7)",
              8: "var(--sand-8)",
              9: "var(--sand-9)",
              10: "var(--sand-10)",
              11: "var(--sand-11)",
              12: "var(--sand-12)"
            },
            success: "var(--success)",
            error: "var(--error)",
            warning: "var(--warning)"
          }
        }
      }
    };
  </script>
  <script src="https://js.paystack.co/v1/inline.js"></script>
</head>
<body class="bg-sand-2 text-sand-12 min-h-screen font-sans">
  <div class="max-w-md mx-auto px-4 py-8">
    {{-- Business Header --}}
    <div class="text-center mb-8">
      <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
        <span class="text-2xl font-bold text-primary">{{ booking.business.name.charAt(0) }}</span>
      </div>
      <h1 class="text-xl font-bold text-sand-12">{{ booking.business.name }}</h1>
    </div>

    {{-- Booking Summary --}}
    <div class="bg-white border border-sand-7 rounded-xl p-6 mb-6">
      <h2 class="text-lg font-semibold text-sand-12 mb-4">Booking Summary</h2>

      <div class="space-y-3">
        <div class="flex justify-between">
          <span class="text-sand-11">Service</span>
          <span class="font-medium text-sand-12">{{ booking.service.name }}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-sand-11">Date</span>
          <span class="font-medium text-sand-12">{{ booking.date.toFormat('EEE, MMM d, yyyy') }}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-sand-11">Time</span>
          <span class="font-medium text-sand-12">{{ booking.startTime }} - {{ booking.endTime }}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-sand-11">Duration</span>
          <span class="font-medium text-sand-12">{{ booking.service.formattedDuration }}</span>
        </div>
        <div class="border-t border-sand-6 pt-3 mt-3">
          <div class="flex justify-between">
            <span class="font-medium text-sand-12">Total</span>
            <span class="font-bold text-primary text-lg">₦{{ Number(booking.amount).toLocaleString() }}</span>
          </div>
        </div>
      </div>
    </div>

    {{-- Customer Info --}}
    <div class="bg-white border border-sand-7 rounded-xl p-6 mb-6">
      <h3 class="font-medium text-sand-12 mb-3">Your Information</h3>
      <div class="space-y-2 text-sm">
        <div class="flex justify-between">
          <span class="text-sand-11">Name</span>
          <span class="text-sand-12">{{ booking.customerName }}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-sand-11">Email</span>
          <span class="text-sand-12">{{ booking.customerEmail }}</span>
        </div>
        @if(booking.customerPhone)
          <div class="flex justify-between">
            <span class="text-sand-11">Phone</span>
            <span class="text-sand-12">{{ booking.customerPhone }}</span>
          </div>
        @endif
      </div>
    </div>

    {{-- Pay Button --}}
    <button
      id="payBtn"
      onclick="payWithPaystack()"
      class="w-full py-4 bg-primary text-white font-semibold rounded-xl hover:bg-primary/90 text-lg"
    >
      Pay ₦{{ Number(booking.amount).toLocaleString() }}
    </button>

    <p class="text-center text-sm text-sand-11 mt-4">
      Secure payment powered by Paystack
    </p>

    {{-- Footer --}}
    <div class="mt-12 text-center text-sm text-sand-10">
      Powered by <a href="/" class="text-primary hover:underline">BookMe</a>
    </div>
  </div>

  <script>
    function payWithPaystack() {
      const handler = PaystackPop.setup({
        key: '{{ paystackPublicKey }}',
        email: '{{ booking.customerEmail }}',
        amount: {{ booking.amount * 100 }},
        currency: 'NGN',
        ref: '{{ booking.paymentReference }}',
        metadata: {
          booking_id: {{ booking.id }},
          business_slug: '{{ booking.business.slug }}',
          custom_fields: [
            {
              display_name: 'Service',
              variable_name: 'service',
              value: '{{ booking.service.name }}'
            }
          ]
        },
        callback: function(response) {
          window.location.href = '/book/{{ booking.business.slug }}/booking/{{ booking.id }}/verify?reference=' + response.reference;
        },
        onClose: function() {
          console.log('Payment window closed');
        }
      });
      handler.openIframe();
    }
  </script>
</body>
</html>
