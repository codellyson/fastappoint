<script>
  function serviceWorkerTest() {
    return {
      loading: false,
      registered: false,
      success: false,
      message: '',

      async registerServiceWorker() {
        this.loading = true
        this.message = ''

        try {
          const registration = await navigator.serviceWorker.register('/sw.js')
          console.log('Service Worker registered:', registration)

          this.registered = true
          this.success = true
          this.message = 'Service Worker registered successfully! Scope: ' + registration.scope
        } catch (error) {
          console.error('Service Worker registration failed:', error)
          this.success = false
          this.message = 'Failed to register Service Worker: ' + error.message
        } finally {
          this.loading = false
        }
      }
    }
  }

  function subscriptionTest() {
    return {
      loading: false,
      isSubscribed: false,
      success: false,
      message: '',
      pushManager: null,

      async init() {
        await this.$nextTick()
        if (window.pushManager) {
          this.pushManager = window.pushManager
          this.isSubscribed = await this.pushManager.checkSubscription()
        }
      },

      async subscribe() {
        this.loading = true
        this.message = ''

        try {
          await this.pushManager.subscribe()
          this.isSubscribed = true
          this.success = true
          this.message = 'Successfully subscribed to push notifications!'
        } catch (error) {
          console.error('Subscription failed:', error)
          this.success = false
          this.message = 'Failed to subscribe: ' + error.message
        } finally {
          this.loading = false
        }
      },

      async unsubscribe() {
        this.loading = true
        this.message = ''

        try {
          await this.pushManager.unsubscribe()
          this.isSubscribed = false
          this.success = true
          this.message = 'Successfully unsubscribed from push notifications'
        } catch (error) {
          console.error('Unsubscribe failed:', error)
          this.success = false
          this.message = 'Failed to unsubscribe: ' + error.message
        } finally {
          this.loading = false
        }
      }
    }
  }

  function notificationTest() {
    return {
      loading: false,
      success: false,
      message: '',

      async sendTest() {
        this.loading = true
        this.message = ''

        try {
          const response = await fetch('/api/push/test', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
          })

          const data = await response.json()

          if (data.success) {
            this.success = true
            this.message = 'âœ“ Test notification sent successfully! Check your device for the notification.'
          } else {
            throw new Error(data.error || 'Failed to send test notification')
          }
        } catch (error) {
          console.error('Test notification failed:', error)
          this.success = false
          this.message = 'Failed to send test: ' + error.message
        } finally {
          this.loading = false
        }
      }
    }
  }

  function debugInfo() {
    return {
      permission: 'Loading...',
      swStatus: 'Loading...',
      subscriptionCount: 'Loading...',

      async loadInfo() {
        // Check permission
        this.permission = Notification.permission

        // Check service worker
        if ('serviceWorker' in navigator) {
          const registration = await navigator.serviceWorker.getRegistration()
          this.swStatus = registration ? 'Active' : 'Not Registered'
        } else {
          this.swStatus = 'Not Supported'
        }

        // Check subscriptions
        try {
          const response = await fetch('/api/push/subscriptions')
          const data = await response.json()
          this.subscriptionCount = data.subscriptions ? data.subscriptions.length : 0
        } catch (error) {
          this.subscriptionCount = 'Error'
        }
      }
    }
  }
</script>
